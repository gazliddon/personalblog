
extends layout

block prepend title
  | #{ page.title } - 

block content
  include author

  #header
    -var x = "&nbsp;"
    span.aut= page.date.toDateString()
    h1= page.title

    tags = page.metadata.tags
    if (tags)
      p.tags
        each t in tags.split(" ")
          span.label.label-info= t
          !{x}

  article.post
    section.content!= page.html
